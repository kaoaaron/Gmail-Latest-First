{
  "manifest_version": 3,
  "description": "Show latest emails first in Gmail.",
  "name": "Gmail Buttons",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "run_at": "document_end",
      "js": ["jquery.js", "content.js"],
      "css": ["styles.css"]
    }
  ]
}
